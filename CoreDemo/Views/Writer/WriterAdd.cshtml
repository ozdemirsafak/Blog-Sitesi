@model CoreDemo.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>WriterAdd</h1>
<form enctype="multipart/form-data" method="post">

        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                    <div class="card-body">
                     <h4 class="card-title">Yazar Profil Bilgileri </h4>
                     <br>
                     <div class="form-group">
                     <label>Yazar Ad Soyad</label>
                     <input type="text" class="form-control" asp-for="WriterName" id="exampleInputName1" placeholder="Name">
                     </div>
                     <div class="form-group">
                     <label>E-mail</label>
                     <input type="email" class="form-control" asp-for="WriterMail" id="exampleInputEmail3" placeholder="Email">
                     </div>
                     <div class="form-group">
                     <label>Şifre</label>
                     <input type="password" class="form-control" asp-for="WriterPassword" id="exampleInputPassword4" placeholder="Şifre">
                     </div>                 
                     <div class="form-group">
                     <label class="form-label" for="customFile">Yazar Görseli</label>
                     <input type="file" asp-for="WriterImage" class="form-control" id="customFile" />
                     </div>
                     <div class="form-group">
                     <label>Yazar Hakkında</label>
                     <textarea class="form-control" asp-for="WriterAbout" id="exampleTextarea1" rows="4"></textarea>
                     </div>
                     <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                     <button class="btn btn-light">İptal</button>
                     </div>
             </div>   
        </div>
</form>

